{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "describe": false,
    "it": false,
    "beforeEach": false,
    "afterEach": false
  },
  "rules": {
    "indent": [
        "error",
        2
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "semi": [
        "error",
        "never"
    ],
    "no-console": "warn"
  }
}
